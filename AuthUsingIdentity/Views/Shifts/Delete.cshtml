@model AuthUsingIdentity.Models.Shift

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="bg-danger">Are you sure you want to delete this?</h3>
<div>
    <div class="form-group">

        <table class="table table-bordered">
            <tr class="bg-primary">
                <th>@Html.DisplayNameFor(model => model.ShiftId)</th>
                <th>@Html.DisplayNameFor(model => model.ShiftName)</th>
                <th>@Html.DisplayNameFor(model => model.Remarks)</th>
            </tr>
            <tr>
                <td> @Html.DisplayFor(model => model.ShiftId)</td>
                <td> @Html.DisplayFor(model => model.Remarks)</td>
                <td> @Html.DisplayFor(model => model.ShiftName)</td>
            </tr>
        </table>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
